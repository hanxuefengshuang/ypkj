<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/shap_main_splash</item>
        <item name="android:windowNoTitle">true</item><!-- 没有标题 -->
        <item name="android:windowFullscreen">true</item><!-- 没有标题 -->
    </style>

    <style name="style_mine_rl">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="style_arrow_right">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/rightarrow</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_mine_tv">
        <item name="android:textColor">#FF333333</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleTheme">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavTRouteSortItemDivider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/nsdk_cl_bg_d_mm</item>
    </style>

    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
        </attr>
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <style name="TextLabel" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="colorAccent">@color/colorHint</item>
        <item name="colorControlNormal">@color/colorHint</item>
        <item name="colorControlActivated">@color/colorHint</item>

    </style>
</resources>