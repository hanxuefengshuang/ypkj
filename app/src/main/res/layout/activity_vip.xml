<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.VipActivity">

        <com.hjq.bar.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/vipTopback"
            app:titleSize="17sp"
            app:backButton="true"
            app:titleStyle="bold"
            app:leftIcon="@mipmap/icon_back"
            app:lineVisible="false"
            app:title="我的会员"
            app:rightColor="@color/white"
            app:titleColor="@color/white"
            tools:ignore="MissingDefaultResource" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/titlebar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <View
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@mipmap/vip_top_back"></View>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTop"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="4dp"
                    android:layout_marginTop="5dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cTips"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/myvipback"
                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent">
                            <com.android.library.YLCircleImageView
                                android:id="@+id/avatar1"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:radiusYL="60dp"
                                app:borderColorYL="@color/white"
                                app:borderWidthYL="1.5dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_centerVertical="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@mipmap/avatar"
                                />
                            <com.android.library.YLCircleImageView
                                android:id="@+id/avatar2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:radiusYL="60dp"
                                app:borderColorYL="@color/white"
                                app:borderWidthYL="1.5dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_centerVertical="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@mipmap/avatar"
                                android:layout_marginLeft="20dp"
                                />
                            <com.android.library.YLCircleImageView
                                android:id="@+id/avatar4"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:radiusYL="60dp"
                                app:borderColorYL="@color/white"
                                app:borderWidthYL="1.5dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_centerVertical="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@mipmap/avatar"
                                android:layout_marginLeft="60dp"
                                />
                            <com.android.library.YLCircleImageView
                                android:id="@+id/avatar5"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:radiusYL="60dp"
                                app:borderColorYL="@color/white"
                                app:borderWidthYL="1.5dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_centerVertical="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@mipmap/avatar"
                                android:layout_marginLeft="80dp"
                                />
                            <com.android.library.YLCircleImageView
                                android:id="@+id/avatar3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:borderColorYL="@color/white"
                                app:borderWidthYL="1.5dp"
                                app:radiusYL="60dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_centerVertical="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@mipmap/avatar"
                                android:layout_marginLeft="40dp"
                                />
                            <TextView
                                android:id="@+id/note"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toRightOf="@id/avatar5"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textSize="13sp"
                                android:layout_marginTop="3dp"
                                android:textColor="@color/whiteTilte"
                                android:layout_marginLeft="5dp"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardVip"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:layout_constraintTop_toBottomOf="@id/cardTop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="5dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/vipback"
                        >
                        <com.android.library.YLCircleImageView
                            android:id="@+id/my_avatar"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="19dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:src="@mipmap/avatar"
                            app:radiusYL="60dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintLeft_toRightOf="@id/my_avatar"
                            app:layout_constraintTop_toTopOf="@id/my_avatar"
                            app:layout_constraintBottom_toBottomOf="@id/my_avatar"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/nickName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/useEndTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/white"
                                android:visibility="gone"
                                />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/ivMemberLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="8dp"
                            android:src="@mipmap/single_member"
                            android:textColor="@color/white"
                            />

                        <ImageView
                            android:id="@+id/memberOpenType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="40dp"/>

                        <TextView
                            android:id="@+id/cardNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="25dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="#FF896025"
                            />

                        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginRight="25dp"
                            app:sb_radius="20dp"
                            android:text="立即开通"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:visibility="gone"
                            android:background="@drawable/shape_openvpn_btn"
                            android:layout_marginBottom="16dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:id="@+id/verticalLine"
                    android:layout_width="3dp"
                    android:layout_height="17dp"
                    android:background="@drawable/vip_vertical"
                    app:layout_constraintTop_toBottomOf="@id/cardVip"
                    app:layout_constraintLeft_toLeftOf="@id/cardVip"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/tig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/verticalLine"
                    app:layout_constraintBottom_toBottomOf="@id/verticalLine"
                    android:text="会员套餐"
                    android:gravity="bottom"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/whiteTilte"
                    />

                    <LinearLayout
                        android:id="@+id/llVipPackage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tig"
                        app:layout_constraintLeft_toLeftOf="@id/cardTop"
                        app:layout_constraintRight_toRightOf="@id/cardTop"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/llMonthVip"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:background="@drawable/shape_vippackage_normal">
                            <TextView
                                android:id="@+id/month_vip_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FF656565"
                                android:layout_marginTop="10dp"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:id="@+id/monthPresentPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="#FFF96F6F"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/monthOriginalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="#FF999999"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llQuarterVip"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:background="@drawable/shape_vippackage_select">
                            <TextView
                                android:id="@+id/quarter_vip_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FF656565"
                                android:layout_marginTop="10dp"
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/quarterPresentPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="#FFA9742E"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/quarterOriginalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="#FF999999"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llYearVip"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:background="@drawable/shape_vippackage_normal">
                            <TextView
                                android:id="@+id/year_vip_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FF656565"
                                android:layout_marginTop="10dp"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:id="@+id/yearPresentPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="#FFF96F6F"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/yearOriginalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="#FF999999"
                                />
                        </LinearLayout>
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRead"
                    app:layout_constraintTop_toBottomOf="@id/llVipPackage"
                    app:layout_constraintLeft_toLeftOf="@id/cardTop"
                    app:layout_constraintRight_toRightOf="@id/cardTop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    >
                    <RelativeLayout
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:background="@drawable/shape_read_normal">
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/shape_read_select"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:textColor="#FF999999"
                        android:text="到期自动续费，可随时取消"/>
                </LinearLayout>
                
                <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                    android:id="@+id/btnOpenVip"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/llRead"
                    app:layout_constraintLeft_toLeftOf="@id/cardTop"
                    app:layout_constraintRight_toRightOf="@id/cardTop"
                    android:background="@drawable/shape_open_vip_btn"
                    android:layout_marginTop="20dp"
                    android:text="立即开通"
                    android:textColor="@color/white"
                    app:sb_radius="20dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/btnOpenVip"
                    app:layout_constraintLeft_toLeftOf="@id/btnOpenVip"
                    app:layout_constraintRight_toRightOf="@id/btnOpenVip"
                    android:textColor="#FFA9742E"
                    android:layout_marginTop="15dp"
                    android:text="《用户服务协议》"/>

                <View
                    android:id="@+id/verticalLine2"
                    android:layout_width="3dp"
                    android:layout_height="17dp"
                    android:background="@drawable/vip_vertical"
                    app:layout_constraintTop_toBottomOf="@id/agreement"
                    app:layout_constraintLeft_toLeftOf="@id/cardVip"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/tig2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/verticalLine2"
                    app:layout_constraintBottom_toBottomOf="@id/verticalLine2"
                    android:text="会员特权"
                    android:gravity="bottom"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/whiteTilte"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/verticalLine2"
                    app:layout_constraintLeft_toLeftOf="@id/cardTop"
                    app:layout_constraintRight_toRightOf="@id/cardTop"
                    android:src="@mipmap/vip_privilege"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>