<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <!-- <include
            android:id="@+id/title"
            layout="@layout/titlebar" />-->



        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/nsdk_rg_ic_location"
            android:padding="5dp"
            android:id="@+id/iv_location"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="196dp"
            android:layout_marginRight="10dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cMsg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/msg_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/ivMsg"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/haveNewMsg"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/shape_ovil_red_bg"
                app:layout_constraintRight_toRightOf="@id/ivMsg"
                app:layout_constraintTop_toTopOf="@id/ivMsg"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/item_first"

            android:background="@drawable/shape_map_bottom"
            >
            <ImageView
                android:layout_width="18.5dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_location_center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:id="@+id/iv_location_center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333333"
                android:text="我的位置"
                android:id="@+id/tv_location_center"
                app:layout_constraintLeft_toRightOf="@+id/iv_location_center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/iv_location_center"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:textSize="11sp"
                android:textColor="#666666"
                android:id="@+id/user_location"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/tv_location_center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="11.5dp"
                android:id="@+id/tv_now"
                android:text="现在"
                android:textSize="11sp"
                android:textColor="#999999"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#EFEFEF"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="56dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/view_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/view_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:drawablePadding="9dp"
                    android:drawableTop="@mipmap/map_my_his_location"
                    android:text="我的轨迹"
                    android:gravity="center"
                    android:id="@+id/user_sport"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:drawablePadding="9dp"
                    android:drawableTop="@mipmap/map_friend_location"
                    android:text="好友位置"
                    android:gravity="center"
                    android:id="@+id/user_friend_location"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:drawablePadding="9dp"
                    android:drawableTop="@mipmap/map_alarm"
                    android:text="一键报警"
                    android:gravity="center"
                    android:id="@+id/user_alarm"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:drawablePadding="9dp"
                    android:drawableTop="@mipmap/map_phone"
                    android:text="伪装来电"
                    android:gravity="center"
                    android:id="@+id/user_call"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:drawablePadding="9dp"
                    android:drawableTop="@mipmap/map_sos"
                    android:text="好友求助"
                    android:id="@+id/user_sos"
                    android:gravity="center"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:id="@+id/item_friend"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_map_bottom"
            >
            <com.android.library.YLCircleImageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:radiusYL="60dp"
                android:layout_marginLeft="9dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:borderColorYL="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/user_name"
                android:textColor="#333333"
                android:text="aaa"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/avatar"
                app:layout_constraintTop_toTopOf="@id/avatar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="距我"
                android:textColor="#666666"
                android:textSize="11sp"
                android:id="@+id/tv_distance"
                android:ellipsize="end"
                android:maxEms="14"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@+id/avatar"
                app:layout_constraintBottom_toBottomOf="@+id/avatar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="11sp"
                android:drawablePadding="9dp"
                android:drawableTop="@mipmap/map_nav"
                android:text="导航前往"
                android:id="@+id/user_nvi"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/avatar"
                app:layout_constraintTop_toTopOf="@id/avatar"
                android:layout_marginRight="8dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="11sp"
                android:drawablePadding="9dp"
                android:drawableTop="@mipmap/map_my_his_location"
                android:text="历史轨迹"
                android:id="@+id/user_his_location"
                app:layout_constraintRight_toLeftOf="@+id/user_nvi"
                app:layout_constraintTop_toTopOf="@id/avatar"
                app:layout_constraintBottom_toBottomOf="@id/avatar"
                android:layout_marginRight="8dp"
                android:gravity="center"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>