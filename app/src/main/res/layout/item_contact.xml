<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_safety_back">

        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#FF333333"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/contactMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/contactName"
            app:layout_constraintBottom_toBottomOf="@id/contactName"
            android:textColor="#FF333333"
            android:layout_marginLeft="11dp"
            />

        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_safety_add"
            android:text="修改"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="2dp"
            app:sb_radius="20dp"
            android:paddingBottom="2dp"
            android:layout_marginRight="15dp" />

        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_safety_delete"
            android:text="删除"
            android:visibility="invisible"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="2dp"
            app:sb_radius="20dp"
            android:paddingBottom="2dp"
            android:layout_marginRight="15dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>