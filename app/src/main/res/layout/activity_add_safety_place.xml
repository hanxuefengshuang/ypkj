<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.AddSafetyPlaceActivity">

        <include
            android:id="@+id/title"
            layout="@layout/white_titlebar"/>

        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="25dp"
            android:id="@+id/ll_add_item"
            android:visibility="gone"
            android:background="@drawable/shape_round_back_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="请输入地点名称"
                android:textColor="#333333"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:id="@+id/et_adr_name"
                android:maxLength="7"
                android:textColorHint="#666666"
                android:background="@drawable/shape_round_grey"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:hint="请选择地址"
                android:textColor="#666666"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_adr_sel"
                android:drawableRight="@mipmap/rightarrow"
                android:background="@drawable/shape_round_grey"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:id="@+id/rl_item"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:minLines="2"
                android:textColor="@color/color333333"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/tv_addresss"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_addresss"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                >
                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_grey"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginRight="60dp"
                    android:text="删除"
                    android:id="@+id/btn_delete"
                    android:gravity="center"
                    />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_update"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="编辑"
                    android:id="@+id/btn_update"
                    android:gravity="center"
                    />
            </LinearLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>